<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 mb-4">
            <div class="card card-course-item h-100 d-flex flex-column">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{image}}" alt="{{name}}">
                </a>
                <div class="card-body d-flex flex-column">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{name}}</h5>
                    </a>
                    <p class="card-text text-truncate-multiline">
                        {{description}}
                    </p>
                    <a href="#" class="btn btn-primary mt-auto">Buy now</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>